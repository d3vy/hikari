{
    "name": "Hikari",
    "version": "0.1",
    "description": "Find the spelling and meaning of a kanji with a click.",
    "permissions": ["activeTab"],
    "browser_action": {
        "default_icon": {
            "16": "icon/16.png",
            "32": "icon/32.png",
            "48": "icon/48.png",
            "128": "icon/128.png"
        },
        "default_popup": "popup.html",
        "default_title": "Hikari"
    },
    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "manifest_version": 2
}
